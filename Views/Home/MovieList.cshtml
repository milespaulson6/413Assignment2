@{
    ViewBag.Title = "Joel Hiltons Movie List";
}

@model IEnumerable<_413Assignment2.Models.MovieResponse>

<div>
    <h2>Here are all the movies in the list</h2>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (_413Assignment2.Models.MovieResponse x in Model)
            {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index">Click here to return to main page</a>
</div>
